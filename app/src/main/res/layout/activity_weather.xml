<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkgrey"
    tools:context=".WeatherActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">


        <EditText

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_file"
            android:hint="Enter city name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginTop="8dp"
            android:padding="15dp"
            android:layout_weight="1"
            android:layout_marginStart="30dp"
            android:id="@+id/edittextcityname"
            android:gravity="center"
            android:drawableStart="@drawable/location_city"
            tools:ignore="RtlCompat" />


        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/search"
            android:id="@+id/search"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear_layout_weather"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewCityWeather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="7dp"
            android:textColor="@color/neon2"
            android:textSize="30sp"
            android:text="Dhaka , GB" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWeather"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"
                tools:ignore="RtlCompat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                tools:ignore="RtlCompat">


                <TextView
                    android:id="@+id/textViewTempWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:textColor="@color/neon2"
                    android:layout_gravity="center"
                    android:text="25 C" />

                <TextView
                    android:id="@+id/textViewWeatherConditionWeather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@color/neon2"
                    android:layout_gravity="center"
                    android:text="Few Clouds" />


            </LinearLayout>



        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Details :"
            android:textSize="30sp"
            android:textColor="@color/neon2"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="10dp"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="25dp"
                tools:ignore="RtlCompat">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Humidity"
                    android:textSize="24sp"
                    android:textColor="@color/neon2"
                    android:layout_marginTop="5dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max. Temp"
                    android:textSize="24sp"
                    android:textColor="@color/neon2"
                    android:layout_marginTop="5dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min. Temp"
                    android:textSize="24sp"
                    android:textColor="@color/neon2"
                    android:layout_marginTop="5dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pressure"
                    android:textSize="24sp"
                    android:textColor="@color/neon2"
                    android:layout_marginTop="5dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wind"
                    android:textSize="24sp"
                    android:textColor="@color/neon2"
                    android:layout_marginTop="5dp"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                tools:ignore="RtlCompat">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 50%"
                    android:textSize="24sp"
                    android:textColor="@color/neon2"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    tools:ignore="RtlCompat"
                    android:id="@+id/textViewHumidityWeather"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 25C"
                    android:textSize="24sp"
                    android:textColor="@color/neon2"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    tools:ignore="RtlCompat"
                    android:id="@+id/textViewMaxTempWeather"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 25C"
                    android:textSize="24sp"
                    android:textColor="@color/neon2"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    tools:ignore="RtlCompat"
                    android:id="@+id/textViewMinTempWeather"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 50"
                    android:textSize="24sp"
                    android:textColor="@color/neon2"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    tools:ignore="RtlCompat"
                    android:id="@+id/textViewPressureWeather"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=": 5"
                    android:textSize="24sp"
                    android:textColor="@color/neon2"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    tools:ignore="RtlCompat"
                    android:id="@+id/textViewWindWeather"

                    />


            </LinearLayout>



        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:src="@drawable/add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>






</LinearLayout>